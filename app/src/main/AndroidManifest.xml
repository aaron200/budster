<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ari.budster" >
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LogPurchaseScreen"
            android:label="Log Purchase"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".CreateBudgetScreen"
            android:label="Create Budget"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".BudgetStatusScreen"
            android:label="Budgets"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".SelectedBudgetScreen"
            android:label="View Budget Status"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".AboutScreen"
            android:label="About"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".SettingsScreen"
            android:label="Settings"
            android:theme="@style/AppTheme"
            />


    </application>

</manifest>

